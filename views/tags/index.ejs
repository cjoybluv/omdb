<h3>Tag List</h3>

<% tags.forEach(function(tag) { %>
  <div class="well">
    <h4>
      <% var tagEm = 1+(tag[1]/2) %>
      <a href="/tags/<%= tag[0].id %>"><span class="tag-cloud" style="font-size:<%= tagEm %>em;"><%= tag[0].tag %></span></a><span class="pull-right"><%= tag[1] %></span>
    </h4>
    <p>
      <ul>
      <% tag[0].favorites.forEach(function(favorite) { %>
        <li><%= favorite.title %><br/></li>
      <% }) %>
      </ul>
    </p>
  </div>
<% }); %>

