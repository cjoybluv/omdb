<h3><small>Add a new Tag for: </small><%= favorite.title %></h3>

<form action="/favorites/<%= favorite.id %>/tags" method="POST" role="form">
  <div class="form-group">
    <label for="tagName">Tag Name:</label>
    <input type="text" class="form-control" id="tag" placeholder="#hashtag" name="tag">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="row">
  &nbsp;
</div>

<div class="well">
  <% tags.forEach(function(tag, idx) { %>
    <%= tag.tag %>
    <% if(idx<tags.length-1) { %>
      &nbsp;|&nbsp;
    <% } %>
  <% }); %>
</div>
