<h3>Make a comment...</h3>


<div class="row">
  <div class="col-md-3">
    <img src="<%= favorite.poster %>" class="thumb img-responsive">
  </div>
  <div class="col-md-9">
    <h4><%= favorite.title %></h4>
    <%= favorite.year %>

    <ul>
      <% comments.forEach(function(comment) { %>
        <li><%= comment.comment %></li>
      <% }) %>
    </ul>

    <form action="/favorites/<%= favorite.id %>/comments" method="POST" role="form">
      <div class="form-group">
        <label for="comment">Add a Comment</label>
        <textarea  type="text" name="comment" class="form-control" placeholder="Enter Comment" autofocus></textarea>
        <input type="hidden" name="favorite" value="<%= favorite.id %>">
      </div>

      <button type="submit" class="btn btn-danger">Submit</button>
    </form>

  </div>

</div>

